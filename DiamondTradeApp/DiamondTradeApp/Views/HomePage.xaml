            <Label></Label>
            <Frame BorderColor="Gray" BackgroundColor="#ffff99" CornerRadius="8">
                <StackLayout>
                    <Label Text="Purchase" TextColor="Black" FontSize="Title" FontAttributes="Bold" HorizontalOptions="Center"  />
                    <BoxView Color="Gray"  HeightRequest="1" HorizontalOptions="Fill" />
                    <Label x:Name="lblPurchase" TextColor="Black" FontSize="Large" FontAttributes="Bold" HorizontalOptions="Center"  />
                </StackLayout>
            </Frame>
