<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiamondTradeApp.Views.ChangePasswordPage"
             Shell.PresentationMode="ModalAnimated"
             Title="Change Password"             
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true">
    <StackLayout>
        <ScrollView>
            <StackLayout>
               
                <StackLayout Padding="40" Spacing="20">
                    <Entry x:Name="txtOldPassword" IsPassword="True" Placeholder="old password" HeightRequest="60"   />
                    <Entry x:Name="txtNewPassword" IsPassword="True" Placeholder="new password" HeightRequest="60"  />
                    <Entry x:Name="txtConfPassword" IsPassword="True" Placeholder="confirm password" HeightRequest="60"  />
                    <Button Text="Change Password" HeightRequest="50" 
                            BackgroundColor="DarkBlue" TextColor="White" CornerRadius="5" Clicked="btnChangePass_Clicked" />
                </StackLayout>
                
            </StackLayout>

        </ScrollView>


    </StackLayout>
</ContentPage>