    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Export" />
    </ContentPage.ToolbarItems>
    
    
    
    <CollectionView x:Name="collectionView">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto" Padding="10">
                    <Label Grid.Row="0" TextColor="DarkBlue" FontSize="Medium" FontAttributes="Bold" Text="{Binding PartyName}"/>
                    <Label Grid.Row="1" FontAttributes="Bold" Text="Broker Name:" TextColor="Magenta"></Label>
                    <Label Grid.Row="2" TextColor="Black" Text="{Binding BrokerName}"/>
                    <Label Grid.Row="3" Text="Gross Total:" FontAttributes="Bold" TextColor="Magenta"></Label>
                    <Label Grid.Row="4" TextColor="Black" Text="{Binding GrossTotal}"/>
                    <Label Grid.Row="5" Text="Weight:" FontAttributes="Bold" TextColor="Magenta"></Label>
                    <Label Grid.Row="6" TextColor="Black" Text="{Binding Weight}"/>
                    <Label Grid.Row="7" Text="Date:" FontAttributes="Bold" TextColor="Magenta"></Label>
                    <Label Grid.Row="8" TextColor="Black" Text="{Binding Date}"></Label>
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

